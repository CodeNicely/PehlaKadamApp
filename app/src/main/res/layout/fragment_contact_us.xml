<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:baselineAligned="false"
    android:orientation="vertical"
    android:background="@color/white"
    >

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/appBarLayout">

        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:title="Contact Us"
            app:titleTextColor="@color/white"
            android:id="@+id/toolbar"
            />

    </android.support.design.widget.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/appBarLayout">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/padding_medium"
            android:padding="@dimen/padding_medium"
            android:alpha="0.9"
            >

            <LinearLayout
                android:id="@+id/contactUsLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/image_layout"
                    android:layout_marginRight="@dimen/image_large"
                    android:layout_marginLeft="@dimen/image_large"
                    android:layout_marginBottom="@dimen/padding_large"

                    >
                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/padding_small"
                        app:cardBackgroundColor="@color/alabaster"
                        app:cardCornerRadius="@dimen/padding_large"
                        app:cardElevation="@dimen/padding_large"
                        android:padding="@dimen/padding_large"
                        >
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="160dp"
                            android:layout_gravity="center"
                            android:src="@drawable/pk_icon10_text_green"
                            android:padding="@dimen/padding_large"
                            android:id="@+id/imageView"
                            />
                    </android.support.v7.widget.CardView>
                    <ProgressBar
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:id="@+id/imageProgressBar"
                        />
                </RelativeLayout>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/padding_small"
                    app:cardCornerRadius="@dimen/padding_small"
                    app:contentPadding="@dimen/padding_small"

                    android:id="@+id/emailCard"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:padding="@dimen/padding_medium"
                            android:src="@drawable/ic_email"
                            android:id="@+id/emailImage"
                            />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/padding_medium"
                            android:layout_gravity="center"
                            android:id="@+id/email"
                            />
                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/padding_small"
                    app:cardCornerRadius="@dimen/padding_small"
                    app:contentPadding="@dimen/padding_small"
                    android:id="@+id/phoneCard">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:padding="@dimen/padding_small"
                            android:src="@drawable/ic_phone_black_24dp"
                            android:id="@+id/mobileImage"
                            />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/padding_small"
                            android:layout_gravity="center"
                            android:id="@+id/mobile"/>
                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/padding_small"
                    app:cardCornerRadius="@dimen/padding_small"
                    app:contentPadding="@dimen/padding_small"
                    android:id="@+id/locationCard"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:padding="@dimen/padding_small"
                            android:src="@drawable/ic_location_on_black_24dp"
                            android:id="@+id/addressImage"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/padding_small"
                            android:layout_gravity="center"
                            android:id="@+id/address"/>
                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/padding_small"
                    app:cardCornerRadius="@dimen/padding_small"
                    app:contentPadding="@dimen/padding_small"
                    android:id="@+id/facebookCard">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:id="@+id/facebookLayout">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/icon_fb"
                            android:id="@+id/facebookImage"
                            />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="4dp"
                            android:layout_gravity="center"
                            android:id="@+id/facebook"/>
                    </LinearLayout>
                </android.support.v7.widget.CardView>

            </LinearLayout>
        </RelativeLayout>

    </ScrollView>

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:id="@+id/progressBar"
        />

</RelativeLayout>