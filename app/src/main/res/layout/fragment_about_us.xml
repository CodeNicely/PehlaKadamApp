                <!--android:padding="@dimen/activity_vertical_margin"-->
                <!--android:textAppearance="?android:attr/textAppearanceMedium"-->
                <!--android:textColor="#020202"-->
                <!--android:textSize="20dp"-->
                <!--android:textStyle="bold" />-->

            <!--<TextView-->
                <!--android:id="@+id/description"-->
